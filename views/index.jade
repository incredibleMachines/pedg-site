    //-
      section#process
        h1="Process"
          span.line
        p="We believe that process is paramount. We have distilled ours into six distinct phases."
        ul.icons
          each val,index in data.process
            li
              img(src=val.icon)
            unless index == data.process.length-1
              li
                img(src="/images/pointing_arrow.png")
        section.slideshow
          each val,index in data.process
            +process(val)

