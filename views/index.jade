//Mixin's
mixin image(src,text,background)
  figure
    if background
      .background
    figcaption=text
    img(src=src,data-src=src)

mixin client(_client)
    li.client()
      +image(_client.image,'',false)
mixin project(_project)
    li.project(class=_project.slug)
      a.project(data-slug=_project.slug)
        +image(_project.thumbnail, _project.title, true )

mixin testimonial(_test)
    article.testimonial
      img.branding(src=_test.logo)
      p.quote
        span.left &ldquo;
        span.text #{_test.text}
        span.name #{_test.name}
          span.title #{_test.title}
        span.right &rdquo;
      figure.tint
        img.background(src=_test.background)

mixin process(_process)
      article.process-single
        section.left
          img(src=_process.image)
        section.right
          h4 #{_process.title}
          p #{_process.description}
