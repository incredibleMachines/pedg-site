extends layout

block content
    form.form-signin(method="POST",role='form')
      h2.form-signin-heading Please create your new login
      input.form-control(type="text",name="user",placeholder="Username")
      input.form-control(type="text",name="password",placeholder="Password")
      button.btn.btn-lg.btn-primary.btn-block(type="submit",value="Log In") Submit
